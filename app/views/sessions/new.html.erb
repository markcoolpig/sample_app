<% provide(:title,"Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url:sessions_path) do |f|%>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "登陆", class:"btn btn-large btn-primary" %>

    <% end %>

    <p>新用户?<%= link_to "注册!", signup_path %>
  </div>
</div>